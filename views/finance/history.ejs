<% layout('layouts/layout') %>

<table class="table tablestriped">
    <thead>
        <tr>
            <th class="text-start">Symbol</th>
            <th class="text-end">Shares</th>
            <th class="text-end">Price</th>
            <th class="text-end">Transacted</th>
        </tr>
    </thead>

    <tbody>
        <% for (row of userHistory) {%> 
        <tr>
            <td class="text-start"> <%= row.stocks.symbol %> </td>
            <td class="text-end"> <%= row.shares %> </td>
            <td class="text-end"> <%= usd(row.price) %> </td>
            <td class="text-end"> <%= parseDateTime(row.p_datetime) %> </td>
        </tr>
        <% } %> 
    </tbody>


</table>


